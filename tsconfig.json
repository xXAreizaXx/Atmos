{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@app/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@data/*": ["src/data/*"],
      "@domain/*": ["src/domain/*"],
      "@hooks/*": ["src/hooks/*"],
      "@services/*": ["src/services/*"],
    },
    "strict": true,
  },
  "extends": "expo/tsconfig.base",
  "include": [
    ".expo/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "expo-env.d.ts"
  ]
}
